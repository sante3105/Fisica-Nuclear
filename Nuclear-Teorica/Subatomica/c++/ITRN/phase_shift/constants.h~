#ifndef CONSTANTS_H
#define CONSTANTS_H

#pragma once

// Cargas
inline constexpr int Z_P = 1;   // Z del proyectil (proton)
inline constexpr int Z_T = 6;   // Z del blanco (carbono-12)

// Masas (en unidades de masa atómica)
inline constexpr int A_P = 1;   // A del proyectil
inline constexpr int A_T = 12;  // A del blanco

// Constantes físicas
inline constexpr double uma_to_MeV = 931.494;      // 1 uma = 931.494 MeV/c²
inline constexpr double hbar = 197.326980;         // MeV·fm
inline constexpr double e2 = 1.44;                 // e² en MeV·fm

// Masa reducida μ = (A_P * A_T / (A_P + A_T)) * uma_to_MeV
inline constexpr double mu = (A_P * A_T * uma_to_MeV) / (A_P + A_T); // MeV/c²

// Potencial nuclear
inline constexpr double V0 = -73.8;  // MeV
inline constexpr double a_p = 2.7;   // fm

#endif
